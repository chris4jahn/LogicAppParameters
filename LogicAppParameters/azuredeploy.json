{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "logicAppName": {
      "type": "string"
    },
    "someId": {
      "type": "string"
    },
    "someIdSecret": {
      "type": "securestring"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location of the Logic App."
      }
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Logic/workflows",
      "name": "[parameters('logicAppName')]",
      "apiVersion": "2016-06-01",
      "location": "[parameters('location')]",
      "tags": {
        "displayName": "LogicApp"
      },
      "properties": {
        "definition": {
          "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
          "actions": {
            "someAction": {
              "description": "Creates something",
              "inputs": {
                "authentication": {
                  "audience": "<my-background-service-url",
                  "clientId": "@{parameters('logicId')}",
                  "secret": "@{parameters('logicIdSecret')}",
                  "type": "ActiveDirectoryOAuth"
                },
                "body": {
                  "description": "<description>",
                  "displayName": "<name>",
                  "groupTypes": [
                    "Unified"
                  ],
                  "mailEnabled": true,
                  "mailNickname": "@{variables('GrpAlias')}",
                  "securityEnabled": false
                },
                "headers": {
                  "Content-Type": "application/json"
                },
                "method": "POST",
                "uri": "https://graph.microsoft.com/v1.0/groups"
              },
              "runAfter": {
                "Grp-Alias_festlegen": [
                  "Succeeded"
                ]
              },
              "type": "Http"
            }
          },
          "contentVersion": "1.0.0.0",
          "outputs": {},
          "parameters": {
            "LogicAppId": {
              "type": "String"
            },
            "LogicAppIdSecret": {
              "type": "SecureString"
            },
            "tenantId": {
              "type": "String"
            }
          },
          "triggers": {},
        "parameters": {
          "logicId": {
            "value": "[parameters('someId')]"
          },
          "logicIdSecret": {
            "value": "[parameters('someIdSecret')]"
          }
        }
      }
    }
  ],
  "outputs": {}
}